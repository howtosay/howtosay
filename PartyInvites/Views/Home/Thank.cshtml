@model PartyInvites.Models.GuestResponse

@{
    ViewBag.Title = "title";
}
<html>
    <head>
        <title>Thank</title>
    </head>
    <body>
        @{
            try
            {
                WebMail.SmtpServer = "smtp.example.com";
                WebMail.SmtpPort = 587;
                WebMail.EnableSsl = true;
                WebMail.UserName = "mySmtpUsername";
                WebMail.Password = "mySmtpPassword";
                WebMail.From = "rspv@example.com";

                WebMail.Send("party-host@example.com", "RSVP Notification",
                Model.Name + " is " + ((Model.WillAttend ?? false) ? "" : "not")
                    + "attending");
            }
            catch (Exception)
            {
                @<b>Sorry, We couldn't send the email to confirm your RSPV</b>;
            }
        }

        <div>
            <h1>Thanks you, @Model.Name!</h1>
            @if (Model.WillAttend == true)
            {
                @:It's so great  that you're coming. The drinks are already in the fridge!
            }
            else
            {
                @:Sorry to hear that you're can't make it, but thanks for letting us know.
            }
        </div>
    </body>
</html>